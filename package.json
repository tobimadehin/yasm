{
  "name": "@tobimadehin/yasm",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "YASM is a straightforward, lightweight state management library for React that simplifies data fetching and caching.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./debug": {
      "types": "./dist/debug/index.d.ts",
      "import": "./dist/debug/index.js",
      "require": "./dist/debug/index.cjs",
      "default": "./dist/debug/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production tsup",
    "build:debug": "cross-env NODE_ENV=development tsup",
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "react",
    "cache",
    "swr",
    "hooks",
    "lightweight",
    "simple",
    "useState",
    "data-fetching"
  ],
  "author": "Emmanuel Madehin",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.42.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^3.2.2",
    "cross-env": "^7.0.3",
    "jsdom": "^26.1.0",
    "semantic-release": "^24.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tobimadehin/yasm.git"
  },
  "homepage": "https://yasm.xyz",
  "bugs": {
    "url": "https://github.com/tobimadehin/yasm/issues"
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
